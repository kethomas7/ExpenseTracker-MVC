@model IEnumerable<Expense>

<h2 class="text-center">Expenses</h2>


@using (Html.BeginForm("SearchExpenses", "Expense", FormMethod.Get))
{
    <p> Find by name: @Html.TextBox("searchString")
        <button class="button" role="button" type="submit">Search</button>
    </p>

}

<table class="table">
    <tr>
        <th>Expense ID</th>
        <th>Name</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Category</th>


    </tr>

    @foreach (var expense in @Model)
    {
        <tr>
            <td><a href=/Expense/GetExpense/@expense.ExpenseID>@expense.ExpenseID</a></td>
            <td>@expense.ExpenseName</td>
            <td>@expense.Amount</td>
            <td>@expense.Date.ToString("MM/dd/yyyy")</td>
            <td>@expense.CategoryName</td>

        </tr>
    }

</table>
<div>

    <a class="button" href="/Expense/Index">Back</a>

</div>



