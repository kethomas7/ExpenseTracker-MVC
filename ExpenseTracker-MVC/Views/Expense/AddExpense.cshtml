@model Expense


<h2 class="text-center">Add a New Expense</h2>

@using (Html.BeginForm("InsertExpenseToDatabase", "Expense", "Post"))
{
    <input asp-for="ExpenseID" type="hidden" value="" />

    <label asp-for="ExpenseName" class="control-label">Name</label>
    <input type="text" name="ExpenseName" class="form-control" value="" />

    <label asp-for="Amount" class="control-label">Amount</label>
    <input type="number" step="0.01" name="Amount" class="form-control" />


    <label asp-for="Date" class="control-label">Date</label>
    <input type="text" name="Date" class="form-control" value="" />

    <div class="form-group">
        <label for="">Select a Category</label>
        <select class="form-control" name="CategoryID" value="">
            @foreach (var cat in Model.Categories)
            {
                <option value="@cat.CategoryID">@cat.CategoryID @cat.CategoryName</option>
            }
        </select>
    </div>


    <button class="button" role="button" type="submit">Add Expense</button>
}
