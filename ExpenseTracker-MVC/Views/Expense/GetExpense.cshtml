@model Expense

<h3 class ="text-center">@Model.ExpenseName Details</h3>

<table class="table">
    <tr>
        <th> ID</th>
        <th>Name</th>
        <th>Amount</th>
        <th>Date</th>
        <th>Category</th>
   
    </tr>
    <tr>
        <td>@Model.ExpenseID</td>
        <td>@Model.ExpenseName</td>
        <td>@Model.Amount</td>
        <td>@Model.Date</td>
        <td>@Model.CategoryName</td>
    
    </tr>
</table>


<div class="buttons">

<div style="display: inline">

    <a class="button" href="/Expense/UpdateExpense/@Model.ExpenseID">Update this Expense</a>
</div>


<div style="display: inline">
    @using (Html.BeginForm("DeleteExpense", "Expense", "Post"))
    {
        <input type="hidden" asp-for="ExpenseID" value="@Model.ExpenseID" />
        <button class="button" role="button" type="submit" onclick="return confirm('Are you sure?')">Delete this Expense </button>
    }
</div>

</div>
